{
    "openapi": "3.0.0",
    "info": {
        "title": "ClarkNav API",
        "description": "API documentation for ClarkNav",
        "version": "1.0.0"
    },
    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Register a new user",
                "operationId": "8a56853624e025573120a09a4c75d468",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "first_name",
                                    "last_name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "example": "John"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "jwt_token"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login an existing user",
                "operationId": "a3b306d14572d1f4bd6c064b3233e7b8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User logged in successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "jwt_token"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Unauthorized"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logout the authenticated user",
                "operationId": "fe8f3429cd6979b3b4517e186505f9f9",
                "responses": {
                    "200": {
                        "description": "User logged out successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Successfully logged out"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Failed to invalidate token"
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Unauthorized"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/refresh": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Refresh JWT token",
                "operationId": "2c27d311a2876560fcb5a754b556cdc5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "refresh_token"
                                ],
                                "properties": {
                                    "refresh_token": {
                                        "type": "string",
                                        "example": "some_refresh_token"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token refreshed successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid refresh token"
                    }
                }
            }
        },
        "/api/some-user-action": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Log some user action",
                "operationId": "68d14ae49c9fe4ef326435641ddb5e1b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "action"
                                ],
                                "properties": {
                                    "action": {
                                        "type": "string",
                                        "example": "Some action"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Action logged successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Action logged"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/get-identity": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Get the authenticated user's identity",
                "operationId": "e87720ca0c991548881b03c058a5f81d",
                "responses": {
                    "200": {
                        "description": "Authenticated user identity",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "example": {
                                                "id": 1,
                                                "first_name": "John",
                                                "last_name": "Doe",
                                                "email": "john.doe@example.com"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Unauthorized"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/update-credentials/{id}": {
            "put": {
                "tags": [
                    "Auth"
                ],
                "summary": "Update user credentials",
                "operationId": "528252c12cb84f0c1670a0ebd1c49fa2",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "User ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "first_name",
                                    "last_name",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "example": "John"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Doe"
                                    },
                                    "current_password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "oldPassword123"
                                    },
                                    "new_password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "newPassword123"
                                    },
                                    "new_password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "newPassword123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User credentials updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User credentials updated successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Unauthorized"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/bug-reports": {
            "post": {
                "tags": [
                    "Bug Reports"
                ],
                "summary": "Create a new bug report",
                "operationId": "3f33bc72bbf8f0d6b9a11e9e0b8ed4c4",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "category",
                                    "description",
                                    "steps",
                                    "expected",
                                    "actual",
                                    "device",
                                    "frequency"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "App Crashes When Searching for Routes"
                                    },
                                    "category": {
                                        "type": "string",
                                        "example": "UI/UX Issue"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "The app crashes when I try to search for a route using public transit."
                                    },
                                    "steps": {
                                        "type": "string",
                                        "example": "1. Open the app\\n2. Search for a route\\n3. App crashes"
                                    },
                                    "expected": {
                                        "type": "string",
                                        "example": "The app should display the search results."
                                    },
                                    "actual": {
                                        "type": "string",
                                        "example": "The app crashes."
                                    },
                                    "device": {
                                        "type": "string",
                                        "example": "iPhone 12, iOS 14.4"
                                    },
                                    "frequency": {
                                        "type": "string",
                                        "example": "Always"
                                    },
                                    "screenshots": {
                                        "type": "string",
                                        "format": "binary",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Bug report created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "title": {
                                            "type": "string",
                                            "example": "App Crashes When Searching for Routes"
                                        },
                                        "category": {
                                            "type": "string",
                                            "example": "UI/UX Issue"
                                        },
                                        "description": {
                                            "type": "string",
                                            "example": "The app crashes when I try to search for a route using public transit."
                                        },
                                        "steps": {
                                            "type": "string",
                                            "example": "1. Open the app\\n2. Search for a route\\n3. App crashes"
                                        },
                                        "expected": {
                                            "type": "string",
                                            "example": "The app should display the search results."
                                        },
                                        "actual": {
                                            "type": "string",
                                            "example": "The app crashes."
                                        },
                                        "device": {
                                            "type": "string",
                                            "example": "iPhone 12, iOS 14.4"
                                        },
                                        "frequency": {
                                            "type": "string",
                                            "example": "Always"
                                        },
                                        "screenshots": {
                                            "type": "string",
                                            "example": "screenshots/example.png",
                                            "nullable": true
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2023-01-01T00:00:00Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2023-01-01T00:00:00Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/feedback": {
            "post": {
                "tags": [
                    "Feedback"
                ],
                "summary": "Submit feedback",
                "operationId": "56856004f3f1ff7348d61b08c145d1bc",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "feature"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Suggestions for Improving Navigation Experience"
                                    },
                                    "feature": {
                                        "type": "string",
                                        "example": "It would be great if the app could display a 'real-time' indicator for when the next bus or train is arriving."
                                    },
                                    "usability": {
                                        "type": "string",
                                        "example": "The app is difficult to navigate."
                                    },
                                    "performance": {
                                        "type": "string",
                                        "example": "The app is slow to load."
                                    },
                                    "experience": {
                                        "type": "string",
                                        "example": "Overall, the app is useful but could be improved."
                                    },
                                    "suggestions": {
                                        "type": "string",
                                        "example": "Add more features for route planning."
                                    },
                                    "priority": {
                                        "type": "string",
                                        "enum": [
                                            "LOW",
                                            "MEDIUM",
                                            "HIGH"
                                        ],
                                        "example": "LOW"
                                    },
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "UNDER_REVIEW",
                                            "IN_PROGRESS",
                                            "IMPLEMENTED",
                                            "CLOSED"
                                        ],
                                        "example": "UNDER_REVIEW"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Feedback submitted successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "title": {
                                            "type": "string",
                                            "example": "Suggestions for Improving Navigation Experience"
                                        },
                                        "feature": {
                                            "type": "string",
                                            "example": "It would be great if the app could display a 'real-time' indicator for when the next bus or train is arriving."
                                        },
                                        "usability": {
                                            "type": "string",
                                            "example": "The app is difficult to navigate."
                                        },
                                        "performance": {
                                            "type": "string",
                                            "example": "The app is slow to load."
                                        },
                                        "experience": {
                                            "type": "string",
                                            "example": "Overall, the app is useful but could be improved."
                                        },
                                        "suggestions": {
                                            "type": "string",
                                            "example": "Add more features for route planning."
                                        },
                                        "priority": {
                                            "type": "string",
                                            "enum": [
                                                "LOW",
                                                "MEDIUM",
                                                "HIGH"
                                            ],
                                            "example": "LOW"
                                        },
                                        "status": {
                                            "type": "string",
                                            "enum": [
                                                "UNDER_REVIEW",
                                                "IN_PROGRESS",
                                                "IMPLEMENTED",
                                                "CLOSED"
                                            ],
                                            "example": "UNDER_REVIEW"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2023-01-01T00:00:00Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2023-01-01T00:00:00Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        }
